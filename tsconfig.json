{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "paths": {
      "@components/*" : ["src/components/*"],
      "@store/*" : ["src/store/*"],
      "@stylesheets/*" : ["src/stylesheets/*"]
    },
    "lib": ["es7", "dom"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
